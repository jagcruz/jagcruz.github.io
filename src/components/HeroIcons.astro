---
import ReactIcon from '@icons/React.astro';
import TypeScriptIcon from '@icons/Typescript.astro';
import JavaScriptIcon from '@icons/Javascript.astro';
import NodeIcon from '@icons/Node.astro';
import GitHubIcon from '@icons/GitHub.astro';
import ViteIcon from '@icons/Vite.astro';
import CSSIcon from '@icons/CSS.astro';
import HTMLIcon from '@icons/HTML.astro';
import NestIcon from '@icons/Nest.astro';
---

<div
  class="absolute bottom-0 right-0 z-30 h-full animate-fade-left animate-delay-500 animate-duration-700 animate-ease-out"
>
  <span
    class="absolute -bottom-1 right-24 z-40 flex size-28 -rotate-45 items-center justify-center rounded-3xl bg-[#03a3d7] p-2 text-white"
  >
    <ReactIcon width={90} height={90} />
  </span>

  <span
    class="absolute bottom-0 right-0 z-50 flex size-28 rotate-12 items-center justify-center rounded-3xl bg-[#E0234E] p-2 text-white"
  >
    <NestIcon width={90} height={90} />
  </span>

  <span
    class="absolute bottom-24 right-5 z-40 flex size-28 -rotate-12 items-center justify-center rounded-3xl bg-[#f7df1e] p-2 text-slate-900"
  >
    <JavaScriptIcon width={90} height={90} />
  </span>

  <span
    class="absolute bottom-48 right-3 z-30 flex size-28 rotate-12 items-center justify-center rounded-3xl bg-[#3178C6] p-2 text-white"
  >
    <TypeScriptIcon width={90} height={90} />
  </span>

  <span
    class="absolute right-6 top-60 z-20 flex size-28 -rotate-12 items-center justify-center rounded-3xl bg-[#339933] p-2 text-white"
  >
    <NodeIcon width={90} height={90} />
  </span>

  <span
    class="absolute right-16 top-32 z-10 flex size-28 rotate-12 items-center justify-center rounded-3xl bg-[#181717] p-2 text-white"
  >
    <GitHubIcon width={90} height={90} />
  </span>

  <span
    class="absolute -right-6 top-36 z-[9] flex size-28 -rotate-12 items-center justify-center rounded-3xl bg-[#1572B6] p-2 text-white"
  >
    <CSSIcon width={90} height={90} />
  </span>

  <span
    class="absolute -right-6 top-9 z-[1] flex size-28 rotate-12 items-center justify-center rounded-3xl bg-[#E34F26] p-2 text-white"
  >
    <HTMLIcon width={90} height={90} />
  </span>

  <span
    class="absolute right-16 top-9 z-0 flex size-28 -rotate-[25deg] items-center justify-center rounded-3xl bg-[#646CFF] p-2 text-white"
  >
    <ViteIcon width={90} height={90} />
  </span>
</div>

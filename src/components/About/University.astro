<panel-university id="university">
  <h1
    class="flex size-full animate-fade items-center justify-center py-2 pl-64 pr-52 text-5xl font-extrabold text-jagc-400 drop-shadow-xl sm:text-8xl"
  >
    University
  </h1>
</panel-university>

<script>
  import { PanelElement } from '@contracts/panel-element';

  class PanelUniversity extends PanelElement {
    render() {
      const treeItem = document.querySelector<HTMLSpanElement>('a[href="#university"] span')!;
      const detailsParent = treeItem.parentElement!.parentElement!.parentElement!
        .parentElement! as HTMLDetailsElement;

      if (this.panelhash === '#university') {
        this.classList.remove('hidden');
        treeItem.classList.add('text-electric-lime');
        detailsParent.open = true;
      } else {
        this.classList.add('hidden');
        treeItem.classList.remove('text-electric-lime');
      }
    }
  }

  customElements.define('panel-university', PanelUniversity);
</script>

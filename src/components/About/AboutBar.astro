---
import Sidebar from '@components/Sidebar.astro';
import FoldersIcon from '@components/FoldersIcon.astro';

import Mail from '@icons/Mail.astro';
import Markdown from '@icons/Markdown.astro';
---

<Sidebar showGradient>
  <details open>
    <summary
      class="hover:bg-black-pearl-975 cursor-pointer border-b border-b-big-stone px-6 py-1 text-sm font-semibold text-white hover:text-electric-lime"
    >
      Personal Info
    </summary>

    <div class="border-b border-b-big-stone py-1">
      <ul class="text-lynch-300 flex flex-col gap-1 py-1 text-base">
        <li>
          <details open class="group/folder">
            <summary
              class="hover:bg-black-pearl-975 group flex cursor-pointer items-center gap-1 px-6 py-1 text-base font-medium marker:content-[''] hover:text-electric-lime"
            >
              <FoldersIcon />
              <span>Development</span>
            </summary>

            <ul class="flex flex-col gap-1 py-1 text-base">
              <li class="hover:bg-black-pearl-975 group hover:text-electric-lime">
                <a
                  class="flex items-center gap-1 py-1 pl-12 pr-6 font-medium"
                  href="#"
                  rel="noopener noreferrer nofollow"
                >
                  <Markdown
                    width={18}
                    height={18}
                    className="text-[#81A1C1] group-hover:text-electric-lime"
                  />
                  <span>Experience</span>
                </a>
              </li>

              <li class="hover:bg-black-pearl-975 group hover:text-electric-lime">
                <a
                  class="flex items-center gap-1 py-1 pl-12 pr-6 font-medium"
                  href="#"
                  rel="noopener noreferrer nofollow"
                >
                  <Markdown
                    width={18}
                    height={18}
                    className="text-[#81A1C1] group-hover:text-electric-lime"
                  />
                  <span>Skills</span>
                </a>
              </li>
            </ul>
          </details>
        </li>

        <li>
          <details class="group/folder">
            <summary
              class="hover:bg-black-pearl-975 group flex cursor-pointer items-center gap-1 px-6 py-1 text-base font-medium marker:content-[''] hover:text-electric-lime"
            >
              <FoldersIcon />
              <span>Education</span>
            </summary>

            <ul class="flex flex-col gap-1 py-1 text-base">
              <li class="hover:bg-black-pearl-975 group hover:text-electric-lime">
                <a
                  class="flex items-center gap-1 py-1 pl-12 pr-6 font-medium"
                  href="#"
                  rel="noopener noreferrer nofollow"
                >
                  <Markdown
                    width={18}
                    height={18}
                    className="text-[#81A1C1] group-hover:text-electric-lime"
                  />
                  <span>University</span>
                </a>
              </li>
            </ul>
          </details>
        </li>

        <li class="hover:bg-black-pearl-975 group hover:text-electric-lime">
          <a
            class="flex items-center gap-1 px-6 py-1 font-medium"
            href="#"
            rel="noopener noreferrer nofollow"
          >
            <Markdown
              width={18}
              height={18}
              className="text-[#81A1C1] group-hover:text-electric-lime"
            />
            <span>About me</span>
          </a>
        </li>
      </ul>
    </div>
  </details>

  <details open class="flex-1">
    <summary
      class="hover:bg-black-pearl-975 cursor-pointer border-b border-b-big-stone px-6 py-1 text-sm font-semibold text-white hover:text-electric-lime"
    >
      Contacts
    </summary>

    <div class="py-1">
      <ul class="text-lynch-300 flex flex-col gap-1 py-1 text-base">
        <li class="hover:bg-black-pearl-975 group hover:text-electric-lime">
          <a
            class="flex items-center gap-1 px-6 py-1 font-medium"
            href="mailto:jgutierrezcruz367@gmail.com?subject=[From%20JAGC]%20Hello%20Jaime!"
            rel="noopener noreferrer nofollow"
            aria-label="Email me at: jgutierrezcruz367@gmail.com"
          >
            <Mail width={18} height={18} className="group-hover:text-[#EA4335]" />
            <span>jgutierrezcruz367@gmail.com</span>
          </a>
        </li>
      </ul>
    </div>
  </details>
</Sidebar>

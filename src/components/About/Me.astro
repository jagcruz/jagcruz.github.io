<panel-me id="me">
  <h1
    class="flex size-full animate-fade items-center justify-center py-2 pl-64 pr-52 text-5xl font-extrabold text-jagc-400 drop-shadow-xl sm:text-8xl"
  >
    About Me
  </h1>
</panel-me>

<script>
  import { PanelElement } from '@contracts/panel-element';

  class PanelMe extends PanelElement {
    render() {
      const treeItem = document.querySelector<HTMLSpanElement>('a[href="#me"] span');

      if (this.panelhash === '#me') {
        this.classList.remove('hidden');
        treeItem!.classList.add('text-electric-lime');
      } else {
        this.classList.add('hidden');
        treeItem!.classList.remove('text-electric-lime');
      }
    }
  }

  customElements.define('panel-me', PanelMe);
</script>
